{
  "name": "soil",
  "version": "1.7.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:de": "ng serve --configuration de",
    "start:en": "ng serve --configuration en",
    "build": "ng build --define \"import.meta.env.APP_VERSION='$(node scripts/get-version.js)'\" && cp public/robots.txt public/sitemap.xml public/favicon.ico public/favicon.svg public/apple-touch-icon.png public/favicon-96x96.png public/site.webmanifest public/web-app-manifest-192x192.png public/web-app-manifest-512x512.png dist/soil/browser/",
    "deploy:backend": "npm install --prefix functions && npx firebase deploy --only functions,firestore,storage --non-interactive --project soil-602ea --force",
    "watch": "ng build --watch --configuration development",
    "start:emulators": "firebase emulators:start",
    "test:unit": "vitest run",
    "test:functions": "npm run test --prefix functions",
    "test:e2e": "npm run build && firebase emulators:exec --project demo-soil --ui \"cypress run --config baseUrl=http://localhost:5005/de\"",
    "test:e2e:open": "npm run build && firebase emulators:exec --project demo-soil --ui \"cypress open --config baseUrl=http://localhost:5005/de\"",
    "test:ci": "npm run lint && npm run prettier:check && npm run test:unit && npm run test:functions && npm run test:e2e",
    "deploy": "node scripts/deploy.js",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky",
    "serve:ssr:soil": "node dist/soil/server/server.mjs"
  },
  "lint-staged": {
    "src/**/*.{ts,html,scss,css}": [
      "eslint --fix",
      "prettier --write"
    ],
    "functions/src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "private": true,
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/build": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/fire": "^21.0.0-rc.0",
    "@angular/forms": "^21.0.0",
    "@angular/localize": "^21.0.6",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/service-worker": "^21.0.0",
    "@angular/ssr": "^21.0.4",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "firebase": "^10.14.1",
    "qrcode-generator": "^2.0.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.0",
    "@analogjs/vitest-angular": "^2.2.0",
    "@angular-devkit/build-angular": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "@types/qrcode-generator": "^0.0.16",
    "angular-eslint": "21.1.0",
    "autoprefixer": "^10.4.19",
    "cypress": "^15.8.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "firebase-tools": "^14.0.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.47.0",
    "vitest": "^4.0.16"
  }
}
