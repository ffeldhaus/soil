{
  "name": "soil",
  "version": "2.6.0",
  "scripts": {
    "ng": "ng",
    "start": "NODE_OPTIONS='--no-deprecation' ng serve",
    "build": "ng build",
    "postbuild": "node scripts/build-sw.js",
    "watch": "ng build --watch --configuration development",
    "start:emulators": "npm run build && firebase emulators:start",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:functions": "npm run test --prefix functions",
    "test:functions:coverage": "npm run test:coverage --prefix functions",
    "test:e2e": "npm run build && firebase emulators:exec --project demo-soil --ui --log-verbosity QUIET \"cypress run --config baseUrl=http://localhost:5005\"",
    "test:e2e:open": "npm run build && firebase emulators:exec --project demo-soil --ui --log-verbosity QUIET \"cypress open --config baseUrl=http://localhost:5005\"",
    "test:ci": "npm run lint && npm run test:unit && npm run test:functions:coverage && npm run test:e2e",
    "deploy": "node scripts/deploy.js",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write .",
    "verify-constants": "vitest run src/app/verify-sources.spec.ts",
    "prettier:check": "biome format .",
    "prepare": "husky",
    "serve:ssr:soil": "node dist/soil/server/server.mjs"
  },
  "private": true,
  "engines": {
    "node": "24"
  },
  "dependencies": {
    "@angular/animations": "^21.1.0",
    "@angular/build": "^21.1.0",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/fire": "^21.0.0-rc.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.0",
    "@angular/platform-server": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@angular/service-worker": "^21.1.0",
    "@angular/ssr": "^21.1.0",
    "angular-shepherd": "^22.0.0",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "firebase": "^12.8.0",
    "qrcode-generator": "^2.0.4",
    "rxjs": "~7.8.0",
    "shepherd.js": "^15.0.0",
    "tslib": "^2.3.0",
    "workbox-window": "^7.4.0",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.1",
    "@analogjs/vitest-angular": "^2.2.1",
    "@angular-devkit/build-angular": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@biomejs/biome": "2.3.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.1",
    "@types/node": "^25.0.10",
    "@types/qrcode-generator": "^0.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.19",
    "cypress": "^15.8.2",
    "firebase-tools": "^15.1.0",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16",
    "workbox-build": "^7.4.0"
  },
  "overrides": {
    "@angular/fire": {
      "firebase-tools": "^15.1.0"
    }
  }
}
