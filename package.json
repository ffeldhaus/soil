{
  "name": "soil",
  "version": "1.1.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --define \"import.meta.env.APP_VERSION='$(node scripts/get-version.js)'\"",
    "watch": "ng build --watch --configuration development",
    "start:emulators": "firebase emulators:start",
    "test:unit": "vitest run",
    "test:functions": "npm run test --prefix functions",
    "test:e2e": "ng build && firebase emulators:exec --project demo-soil --ui \"cypress run --config baseUrl=http://localhost:5005\"",
    "test:e2e:open": "ng build && firebase emulators:exec --project demo-soil --ui \"cypress open --config baseUrl=http://localhost:5005\"",
    "test:ci": "npm run test:unit && npm run test:functions && npm run test:e2e",
    "deploy": "node scripts/deploy.js"
  },
  "private": true,
  "engines": {
    "node": "24"
  },
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/build": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/fire": "^21.0.0-rc.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/service-worker": "^21.0.0",
    "@jsverse/transloco": "^8.2.0",
    "firebase": "^10.14.1",
    "qrcode": "^1.5.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.0",
    "@analogjs/vitest-angular": "^2.2.0",
    "@angular-devkit/build-angular": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.0.0",
    "@types/qrcode": "^1.5.5",
    "autoprefixer": "^10.4.19",
    "cypress": "^15.8.1",
    "firebase-tools": "^14.0.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  }
}
