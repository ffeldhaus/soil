{
  "name": "soil",
  "version": "1.11.3",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:de": "ng serve --configuration de",
    "start:en": "ng serve --configuration en",
    "build": "ng build --define \"import.meta.env.APP_VERSION='$(node scripts/get-version.js)'\" && cp public/robots.txt public/sitemap.xml public/favicon.ico public/favicon.svg public/apple-touch-icon.png public/favicon-96x96.png public/site.webmanifest public/web-app-manifest-192x192.png public/web-app-manifest-512x512.png dist/soil/browser/",
    "deploy:backend": "npm install --prefix functions && npx firebase deploy --only functions,firestore,storage --non-interactive --project soil-602ea --force",
    "watch": "ng build --watch --configuration development",
    "start:emulators": "firebase emulators:start",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:functions": "npm run test --prefix functions",
    "test:functions:coverage": "npm run test:coverage --prefix functions",
    "test:e2e": "npm run build && firebase emulators:exec --project demo-soil --ui --log-verbosity QUIET \"cypress run --config baseUrl=http://localhost:5005/de\"",
    "test:e2e:open": "npm run build && firebase emulators:exec --project demo-soil --ui --log-verbosity QUIET \"cypress open --config baseUrl=http://localhost:5005/de\"",
    "test:ci": "npm run lint && npm run test:unit && npm run test:functions:coverage && npm run test:e2e",
    "deploy": "node scripts/deploy.js",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write .",
    "prettier:check": "biome format .",
    "prepare": "husky",
    "serve:ssr:soil": "node dist/soil/server/server.mjs"
  },
  "private": true,
  "engines": {
    "node": "24"
  },
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/build": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/fire": "^21.0.0-rc.0",
    "@angular/forms": "^21.0.0",
    "@angular/localize": "^21.0.6",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/service-worker": "^21.0.0",
    "@angular/ssr": "^21.0.4",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "firebase": "^12.7.0",
    "qrcode-generator": "^2.0.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.1",
    "@analogjs/vitest-angular": "^2.2.1",
    "@angular-devkit/build-angular": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@biomejs/biome": "2.3.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.1",
    "@types/node": "^22.19.3",
    "@types/qrcode-generator": "^0.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.19",
    "cypress": "^15.8.2",
    "firebase-tools": "^15.1.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "ng-extract-i18n-merge": "^3.2.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "@angular/fire": {
      "firebase-tools": "^15.1.0"
    }
  }
}
