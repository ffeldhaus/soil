{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "schematicCollections": [
      "angular-eslint"
    ]
  },
  "newProjectRoot": "projects",
  "projects": {
    "soil": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": "de",
        "locales": {
          "en": {
            "translation": [
              "src/locale/messages.en.xlf"
            ]
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/soil",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js",
              "@angular/localize/init"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "ssr": {
              "entry": "src/server.ts"
            },
            "server": "src/main.server.ts",
            "prerender": false,
            "i18nMissingTranslation": "error",
            "i18nDuplicateTranslation": "error",
            "allowedCommonJsDependencies": [
              "dijkstrajs"
            ],
            "define": {
              "import.meta.env.APP_VERSION": "\"2.0.8\""
            },
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.css"
            ]
          },
          "defaultConfiguration": "production",
          "configurations": {
            "production": {
              "localize": [
                "de",
                "en"
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1.5MB",
                  "maximumError": "2.5MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "50kB",
                  "maximumError": "100kB"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractLicenses": true
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            },
            "de": {
              "localize": [
                "de"
              ],
              "baseHref": "/de/",
              "outputHashing": "all"
            },
            "en": {
              "localize": [
                "en"
              ],
              "baseHref": "/en/",
              "outputHashing": "all"
            }
          }
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "soil:build:production"
            },
            "development": {
              "buildTarget": "soil:build:development"
            },
            "de": {
              "buildTarget": "soil:build:de"
            },
            "en": {
              "buildTarget": "soil:build:en"
            }
          },
          "defaultConfiguration": "development"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        },
        "extract-i18n": {
          "builder": "ng-extract-i18n-merge:ng-extract-i18n-merge",
          "options": {
            "buildTarget": "soil:build",
            "format": "xlf2",
            "outputPath": "src/locale",
            "targetFiles": [
              "messages.en.xlf"
            ]
          }
        }
      }
    }
  }
}
