{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ],
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ]
        }
    ],
    "hosting": {
        "public": "dist/soil/browser",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "**/ngsw.json",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache"
                    }
                ]
            },
            {
                "source": "**/index.html",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache"
                    }
                ]
            },
            {
                "source": "/de/index.html",
                "headers": [
                    {
                        "key": "X-Bundle-Locale",
                        "value": "de"
                    }
                ]
            },
            {
                "source": "/en-US/index.html",
                "headers": [
                    {
                        "key": "X-Bundle-Locale",
                        "value": "en-US"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/de",
                "destination": "/de/index.html"
            },
            {
                "source": "/de/",
                "destination": "/de/index.html"
            },
            {
                "source": "/de/**",
                "destination": "/de/index.html"
            },
            {
                "source": "/en-US/**",
                "destination": "/en-US/index.html"
            },
            {
                "source": "**",
                "destination": "/en-US/index.html"
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "auth": {
            "port": 9099
        },
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 5005
        },
        "storage": {
            "port": 9199
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    }
}