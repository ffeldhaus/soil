{
  "name": "functions",
  "scripts": {
    "lint": "../../node_modules/.bin/biome check .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "TS_NODE_TRANSPILE_ONLY=true mocha -r ts-node/register -r ./src/polyfill.ts --extension ts src/**/*.test.ts",
    "test:coverage": "nyc npm run test"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "src/types.ts",
      "src/index.ts"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  },
  "engines": {
    "node": "24"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google/genai": "^1.34.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.2",
    "google-auth-library": "^10.5.0",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/sinon": "^21.0.0",
    "chai": "^6.2.2",
    "firebase-functions-test": "^3.4.1",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "sinon": "^21.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "private": true
}
