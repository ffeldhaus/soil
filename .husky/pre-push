#!/bin/sh

# If we can compare against origin/main, do it. Otherwise just run tests.
if git rev-parse --verify origin/main >/dev/null 2>&1; then
  # If ONLY media files are changed since origin/main, skip everything
  if ! git diff --name-only origin/main..HEAD | grep -qvE '\.(jpeg|jpg|png|webp|gif|svg|ico)$'; then
    echo "Only media changes detected since origin/main. Skipping pre-push hooks."
    exit 0
  fi

  # Check if any files changed since origin/main are NOT media or documentation
  if git diff --name-only origin/main..HEAD | grep -qvE '\.(md|jpeg|jpg|png|webp|gif|svg|ico)$'; then
    npm run test:e2e
  else
    echo "Only media or documentation changes detected since origin/main. Skipping E2E tests."
  fi
else
  # Fallback: if origin/main doesn't exist, always run tests
  npm run test:e2e
fi
